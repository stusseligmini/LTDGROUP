# ============================================================================
# CELORA ENVIRONMENT VARIABLES - EXAMPLE
# ============================================================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to Git!

# ============================================================================
# FIREBASE CONFIGURATION
# ============================================================================
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789:web:abcdef

# Firebase Admin (Server-side only - DO NOT expose to client!)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com

# ============================================================================
# DATABASE (Neon PostgreSQL)
# ============================================================================
# Get from: https://console.neon.tech/
DATABASE_URL="postgresql://user:password@host/database?sslmode=require"
DIRECT_DATABASE_URL="postgresql://user:password@host/database?sslmode=require"

# ============================================================================
# HELIUS (Solana RPC)
# ============================================================================
HELIUS_API_KEY=your_helius_api_key_here
NEXT_PUBLIC_HELIUS_API_KEY=your_helius_api_key_here
NEXT_PUBLIC_HELIUS_RPC_URL=https://mainnet.helius-rpc.com/?api-key=YOUR_KEY
NEXT_PUBLIC_HELIUS_DEVNET_URL=https://devnet.helius-rpc.com/?api-key=YOUR_KEY
SOLANA_RPC_URL=https://mainnet.helius-rpc.com/?api-key=YOUR_KEY
SOLANA_WSS_URL=wss://mainnet.helius-rpc.com/?api-key=YOUR_KEY

# ============================================================================
# TELEGRAM BOT
# ============================================================================
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret_here
TELEGRAM_BOT_USERNAME=@YourBotUsername

# ============================================================================
# RECAPTCHA
# ============================================================================
NEXT_PUBLIC_RECAPTCHA_V3_SITE_KEY=your_recaptcha_site_key
RECAPTCHA_V3_SECRET_KEY=your_recaptcha_secret_key

# ============================================================================
# ENCRYPTION & SECURITY
# ============================================================================
ENCRYPTION_KEY=your_32_char_encryption_key_here
JWT_SECRET=your_jwt_secret_here
WALLET_ENCRYPTION_KEY=your_wallet_encryption_key_here

# ============================================================================
# PLATFORM ENDPOINTS
# ============================================================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000

# ============================================================================
# FEATURE FLAGS
# ============================================================================
NODE_ENV=development
ENABLE_TELEGRAM=true
ENABLE_VIRTUAL_CARDS=true
ENABLE_CRYPTO_WALLETS=true
ALCHEMY_API_KEY=your-alchemy-api-key
BLOCKCHAIR_API_KEY=your-blockchair-bitcoin-api-key

# Feature Control
ENABLE_REAL_BLOCKCHAIN=true