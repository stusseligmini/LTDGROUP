{
  "manifest_version": 3,
  "name": "Celora Wallet",
  "version": "1.0.0",
  "description": "Secure non-custodial wallet - Client-side signing only",
  "permissions": [
    "storage",
    "notifications",
    "alarms",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "https://celora-7b552.web.app/*",
    "https://app.celora.com/*",
    "https://*/*",
    "http://*/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background/service-worker.js"],
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["content/content-script.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["content/injected-provider.js"],
      "matches": ["https://*/*", "http://*/*"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "celora@celora.com",
      "strict_min_version": "109.0"
    }
  }
}
